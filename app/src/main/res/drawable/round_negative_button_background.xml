<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">

        <shape android:shape="oval">
            <solid android:color="@color/negativeButtonPressedColor" />
            <stroke android:width="5dp" android:color="@color/negativeButtonStrokeColor" />
        </shape>

    </item>

    <item>
        <shape android:shape="oval">
            <solid android:color="@color/negativeButtonColor" />
            <stroke android:width="5dp" android:color="@color/negativeButtonStrokeColor" />
        </shape>
    </item>
</selector>